<div class="container d-flex align-items-center" style="height: 80vh;">
<div class="container">
  <div class="d-flex justify-content-between">
    <div class="card add-a-fridge">
      <h3>Tell us about you're fridge!</h3>
      <%= simple_form_for @fridge do |f| %>
        <%= f.input :name %>
        <%= f.input :brand %>
        <%= f.input :capacity %>
        <%= f.input :address %>
        <%= f.input :price %>
        <%= f.input :description %>
        <%= f.button :submit, "Add you're fridge", :class => 'button-booking' %>
      <% end %>
    </div>
    <div class="card import-a-picture">Add a picture
      <div>
        <div class=picture></div>
        <a class="button-booking" href="">Import you're best picture</a>
      </div>

    </div>
    </div>
</div>
