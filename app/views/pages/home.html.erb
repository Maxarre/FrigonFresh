<body style="background-image: url(<%= image_path "lg.jpg" %>);" id="back_image">

<div class="container d-flex align-items-center" style="height: 90vh;">


    <h2 id="home_text">With every occasion comes food in a Fridge.</h2>
    <h1 id="home_text">Find the right Fridge for you now!</h1>
  <div class="row">
    <div class="col">
      <label id="home_text" for="exampleInputEmail1">Where</label>
      <%= form_tag fridges_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Address"
        %>
        <button id="home-btn" class="btn btn-primary" type="submit">Find a Fridge</button>
      <% end %>
    </div>
  </div>
<%= link_to "+ more Options", fridges_path, class: "btn btn-primary", id: "more_options"%>


</div>

