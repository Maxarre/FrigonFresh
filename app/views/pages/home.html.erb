<div class =container>


  <form>
  <h2>Book your Fridge!</h2>
  <div class="form-group">
    <label for="exampleInputEmail1">Where</label>
    <input class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Address">
  </div>
  <div class="row">
    <div class="col">
      <label for="">Start Date</label>
      <input type="text" class="form-control" placeholder="DD/MM/YYYY">
    </div>
    <div class="col">
      <label for="">End Date</label>
      <input type="text" class="form-control" placeholder="DD/MM/YYYY">
    </div>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Fridge Capacity</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="How many Liters?">
  </div>
  <%= link_to "Search", fridges_path, class: "btn btn-primary" %>
</form>


</div>
